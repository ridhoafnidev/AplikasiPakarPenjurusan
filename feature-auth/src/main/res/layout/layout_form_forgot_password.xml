<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
        android:id="@+id/tv_title_nik_nip"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_very_small"
        android:text="@string/title_nik_nip"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_nik_nip"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/colorPrimaryDark"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startIconDrawable="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_nik_nip"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_nik_nip"
            android:layout_width="match_parent"
            style="@style/BaseTheme.EditText.Secondary"
            android:layout_height="wrap_content"
            android:hint="@string/nik_or_nik"
            android:lines="1"
            android:imeOptions="actionDone"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.kemenag_inhu.absensi.core_resource.components.BaseButton
        android:id="@+id/btn_forgot_password"
        android:layout_width="match_parent"
        style="@style/BaseTheme.Button.Accent"
        android:layout_height="wrap_content"
        android:text="@string/button_reset_passord"
        android:layout_marginTop="@dimen/medium"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_nik_nip"/>

    <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
        android:id="@+id/tv_back_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:text="@string/title_back_to_login"
        android:textColor="@color/colorPrimaryDark"
        app:base_font_style="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_forgot_password" />

</androidx.constraintlayout.widget.ConstraintLayout>