<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_fit"
        android:layout_marginTop="@dimen/medium_fit"
        android:gravity="center"
        android:text="Ahmad Aldi "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_very_huge"
        app:base_font_style="bold" />

    <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_fit"
        android:layout_marginTop="@dimen/medium"
        android:gravity="center"
        android:text="Karyawan"
        android:layout_marginBottom="@dimen/medium_fit"
        android:textSize="@dimen/text_medium_fit"
        app:base_font_style="medium" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/medium"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="@dimen/medium_fit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/home_header"
            layout="@layout/row_home_header" />

    </androidx.cardview.widget.CardView>


    <include
        android:id="@+id/home_bottom"
        layout="@layout/row_bottom_home"
        android:layout_marginHorizontal="@dimen/medium_fit"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginBottom="@dimen/huge"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>

