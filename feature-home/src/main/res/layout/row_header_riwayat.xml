<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/medium"
    android:layout_marginHorizontal="@dimen/medium"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#006316">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_calendar"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="@dimen/large_fit"
                android:layout_marginTop="@dimen/medium"
                android:layout_marginBottom="@dimen/medium"
                android:src="@drawable/ic_icon_calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                android:id="@+id/tv_schedule_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium"
                android:gravity="center"
                android:text="Januari 2022"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/text_large"
                app:base_font_style="medium"
                app:layout_constraintBottom_toBottomOf="@+id/iv_calendar"
                app:layout_constraintStart_toEndOf="@+id/iv_calendar"
                app:layout_constraintTop_toTopOf="@+id/iv_calendar" />

            <View
                android:layout_width="2dp"
                android:layout_height="80dp"
                android:layout_marginEnd="@dimen/medium_fit"
                android:background="@color/colorTextWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_arrow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="@dimen/medium"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        app:cardCornerRadius="@dimen/small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_date">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#006316"
            android:orientation="horizontal"
            android:padding="@dimen/medium"
            android:weightSum="4">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_hadir_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="Hadir"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_normal"
                    app:base_font_style="medium" />

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_hadir_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_very_huge"
                    app:base_font_style="medium" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/micro"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/small_fit"
                android:layout_marginEnd="@dimen/medium_fit"
                android:background="@color/colorTextWhite" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_alfa_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="Alfa"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_normal"
                    app:base_font_style="medium" />

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_alfa_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_very_huge"
                    app:base_font_style="medium" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/micro"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/small_fit"
                android:layout_marginEnd="@dimen/medium_fit"
                android:background="@color/colorTextWhite" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_sakit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="Sakit"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_normal"
                    app:base_font_style="medium" />

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_sakit_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_very_huge"
                    app:base_font_style="medium" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="@dimen/micro"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/small_fit"
                android:layout_marginEnd="@dimen/medium_fit"
                android:background="@color/colorTextWhite" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_cuti_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="Cuti"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_normal"
                    app:base_font_style="medium" />

                <com.kemenag_inhu.absensi.core_resource.components.BaseTextView
                    android:id="@+id/tv_cuti_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="@dimen/text_very_huge"
                    app:base_font_style="medium" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>